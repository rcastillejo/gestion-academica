<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pantalla1_etiqueta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pantalla1_etiqueta1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/pantalla1_textbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:inputType="textPersonName">
    </EditText>
    
    <TextView
        android:id="@+id/pantalla1_etiqueta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pantalla1_etiqueta2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/pantalla1_textbox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:inputType="textPersonName">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

	    <Button
	        android:id="@+id/pantalla1_boton1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/pantalla1_boton1">
	    </Button>    
	    
	    <Button
	        android:id="@+id/pantalla1_boton2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/pantalla1_boton2">
	    </Button>        
        
    </LinearLayout>
    
</LinearLayout>
